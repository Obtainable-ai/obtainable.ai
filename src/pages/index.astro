---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Footer from '@/components/Footer.astro';
---

<BaseLayout
  title="Obtainable - Useful AI Products"
  description="We build simple, useful AI products."
>
  <main id="main-content" class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 min-h-[80vh] flex items-center justify-center">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold text-white leading-tight mb-6 drop-shadow-2xl">
          Hi, we're Obtainable.
        </h1>
        <p class="text-xl md:text-2xl text-gray-100 mb-12 drop-shadow-lg">
          We build simple, useful AI products.
        </p>
        
        <!-- CTA Row -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/articles" 
            class="inline-flex items-center justify-center px-6 py-3 border border-white/30 text-base font-medium rounded-md text-white bg-white/10 backdrop-blur-sm hover:bg-white/20 transition-all"
          >
            Read our articles
          </a>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 border-t border-white/10">
      <div class="max-w-2xl mx-auto text-center space-y-4">
        <h2 class="text-2xl font-bold text-white">Get in touch</h2>
        <div class="flex items-center justify-center gap-4">
          <div id="email-container" class="text-lg font-medium text-white"></div>
          <button
            id="copy-email-btn"
            type="button"
            class="hidden px-3 py-1 text-sm text-gray-200 hover:text-white border border-white/30 rounded hover:bg-white/10 transition-all backdrop-blur-sm"
            aria-label="Copy email address to clipboard"
          >
            Copy
          </button>
        </div>
        <div id="copy-status" class="text-sm text-blue-300 hidden" role="status" aria-live="polite"></div>
      </div>
    </section>

    <!-- Simple About Section -->
    <section class="py-16 pb-24">
      <div class="max-w-2xl mx-auto text-center space-y-4">
        <h2 class="text-2xl font-bold text-white">Who we are</h2>
        <p class="text-lg text-gray-100 leading-relaxed">
          We're a team focused on building AI products that solve real problems. 
          Our approach is simple: keep things straight forward, minimize complexity, 
          and deliver value quickly.
        </p>
      </div>
    </section>

    <div class="pb-16 text-center text-xs text-gray-300 space-x-1">
      <span>Photo by</span>
      <a class="underline decoration-white/20 hover:decoration-white/60 transition-colors" href="https://unsplash.com/@federize?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText" rel="noreferrer" target="_blank">Federico Beccari</a>
      <span>on</span>
      <a class="underline decoration-white/20 hover:decoration-white/60 transition-colors" href="https://unsplash.com/photos/photography-of-night-sky-L8126OwlroY?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText" rel="noreferrer" target="_blank">Unsplash</a>
    </div>
  </main>

  <Footer />

  <!-- Bot-proof email rendering -->
  <script is:inline>
    (function() {
      // Obfuscated email parts
      const parts = ['info', 'obtainable', 'ai'];
      const email = parts[0] + String.fromCharCode(64) + parts[1] + '.' + parts[2];
      
      const container = document.getElementById('email-container');
      const copyBtn = document.getElementById('copy-email-btn');
      const copyStatus = document.getElementById('copy-status');
      
      if (container) {
        // Render email as text (no clickable mailto to avoid bot clicks)
        container.textContent = email;
        
        // Show copy button
        if (copyBtn) {
          copyBtn.classList.remove('hidden');
          
          copyBtn.addEventListener('click', async function() {
            try {
              await navigator.clipboard.writeText(email);
              if (copyStatus) {
                copyStatus.textContent = 'Email copied to clipboard!';
                copyStatus.classList.remove('hidden');
                setTimeout(function() {
                  copyStatus.classList.add('hidden');
                }, 3000);
              }
            } catch (err) {
              console.error('Failed to copy:', err);
            }
          });
        }
      }
    })();
  </script>
</BaseLayout>
